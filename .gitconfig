[alias]
	graph = log --graph --simplify-by-decoration --pretty=format:'%d' --all
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[core]
	editor = vim
	pager = /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less --tabs=4 -RFX
[merge]
	tool = vimdiff
[push]
	default = current
[difftool "diffpdf"]
  cmd = diffpdf --view \"$LOCAL\" \"$REMOTE\"
