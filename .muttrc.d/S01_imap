# Avoid moving mails to mbox
set nomove

unhook *

# @home
account-hook "imaps://subiron.org/" \
            'set imap_user=maethor'

folder-hook "imaps://subiron.org/" \
            'set folder="imaps://subiron.org/INBOX" \
            spoolfile="imaps://subiron.org/INBOX" \
            hostname="subiron.org" \
            from="maethor@subiron.org" \
            smtp_url="smtps://maethor@subiron.org:465" \
            smtp_pass="$imap_pass" ; \
            unset smtp_authenticators' 

# @ldd
account-hook "imaps://imap.ldd.fr/" \
            'set imap_user=guillaume'

folder-hook "imaps://imap.ldd.fr/" \
            'set folder="imaps://imap.ldd.fr/INBOX" \
            spoolfile="imaps://imap.ldd.fr/INBOX" \
            hostname="ldd.fr" \
            from="guillaume@ldd.fr" \
            smtp_url="smtp://guillaume@smtp.ldd.fr:25" \
            smtp_pass="$imap_pass" ; \
            smtp_authenticators="PLAIN"'

mailboxes "imaps://imap.ldd.fr/INBOX" "imaps://subiron.org/INBOX"
#mailboxes "imaps://subiron.org/INBOX"

# Mys default imaps folder on subiron.org
set folder=imaps://subiron.org/
set spoolfile=imaps://subiron.org/INBOX

set imap_delim_chars="/."
set imap_check_subscribed="yes"
set imap_list_subscribed="yes"

# Check boxes every 90 seconds
set mail_check=90
