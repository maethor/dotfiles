# All identity variables
set realname ="Guillaume Subiron"
set use_envelope_from
set reply_self=yes
alternates "maethor@subiron.org|guillaume@subiron.org|baal@subiron.org|gsubiron@gmail.com|guillaume@sysnove.fr|contact@sysnove.fr"
set reverse_name # use my address as it appears in the message
set reverse_realname = no

# Default profile
folder-hook . 'source ~/.muttrc.d/profiles/maethor@subiron.org'

# Other profiles
folder-hook /sysnove$ 'source ~/.muttrc.d/profiles/guillaume@sysnove.fr'
folder-hook /sysnove.support$ 'source ~/.muttrc.d/profiles/guillaume@sysnove.fr'
folder-hook /sysnove.compta$ 'source ~/.muttrc.d/profiles/guillaume@sysnove.fr'
folder-hook /guillaume$ 'source ~/.muttrc.d/profiles/guillaume@subiron.org'
