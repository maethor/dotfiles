color attachment brightgreen default
color sidebar_new brightyellow default
color error brightwhite red   # errors yell at you in red
color hdrdefault brightred default   # headers
color header brightcyan default ^(From|Subject): # Important headers
color indicator black green # currently selected message
color markers brightcyan default  # the + for wrapped pager lines
color message brightcyan default  # informational messages, not mail
color normal white default    # plain text
color search brightgreen default # hilite search patterns in the pager
color signature cyan default    # signature (after "-- ") is cyan 
color status brightyellow blue # status bar is yellow *on blue*   
color tilde blue default  # ~'s after message body
color tree red default    # thread tree in index menu is red
color underline yellow default
color body magenta default "(ftp|http)://[^ ]+"  # picks up URLs
color body magenta default [-a-z_0-9.]+@[-a-z_0-9.]+   # picks up email adress

# Coloring quoted text - uncomment to color the first 7 levels:
color quoted    green default
