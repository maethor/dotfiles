#SHELL="/bin/bash"
#DEFAULT=$HOME/.maildir/
MAILDIR=$HOME/Maildir/

TO=""

logfile "$HOME/Maildir/maildrop.log"

###----------------------------------------------------------
## PERSOS

## Simple Adresses
if(/^Delivered-To: (iut|baal|maethor|guillaume)@(jarvis\.)?subiron\.org/)
	TO=INBOX.$MATCH1

## Aquilenet
if(/^Delivered-To: maethor\+aquilenet@(jarvis\.)?subiron.org$/)
    TO=INBOX.aquilenet

## IUT Bayonne
if(/^Delivered-To: gsubiron@iutbayonne\.univ-pau\.fr/)
    TO=INBOX.iut

###----------------------------------------------------------
## SERVERS NOTIFICATION MAILS

## Generic
if(/^(Delivered-)?To: (.*<)?(sysop|logcheck|root|apticron)@(.*)\.(open-lux|subiron|aquilenet)\.(org|fr|com)>?$/)
	TO=servers.$MATCH5.$MATCH4

###----------------------------------------------------------
## MAILING LISTS

## lists.domain.suffix mailing lists
if(/^List-Id: (.*<)?(.*)\.(.*)\.(.*)>?/)
	TO=lists.$MATCH3.$MATCH2

# abul mailing lists
if(/^List-Id: .*<(.*)\.abul\.org>/)
	TO=lists.abul.$MATCH1

# aquilenet mailing lists
if(/^List-Id: .*<(.*)\.listes.aquilenet.fr>/)
    TO=lists.aquilenet.$MATCH1

# IUT Bayonne mailing lists
if(/^List-Id: .*<(.*)\.iutbayonne.univ-pau.fr>/)
    TO=lists.iutbayonne.$MATCH1

###----------------------------------------------------------
## TODO

if(/^Delivered-To: maethor\+todo@(jarvis\.)?subiron\.org$/)
	TO=INBOX.TODO

###----------------------------------------------------------
## SPAM

# trashing spammed mails
if(/^X-Spam-Status: YES/ || /^X-Spam-Level: \*{5,}/ || /^X-CRM114-Status: SPAM/)
	TO=INBOX.Junk

# spam learning
if(/^Delivered-To: maethor\+spam@(jarvis\.)?subiron\.org$/)
    TO=Spam

# ham learning
if(/^Delivered-To: maethor\+ham@(jarvis\.)?subiron\.org$/)
    TO=Ham

###----------------------------------------------------------
## CREATE MAILDIR IF THE FOLDER DOESN'T EXIST

FOLDER=$MAILDIR.$TO

`test -d "$FOLDER"`
if($RETURNCODE != 0)
{
	`mkdir -p $FOLDER`
	`rmdir $FOLDER`
	`/usr/bin/maildirmake $FOLDER`
	`echo $TO >> $MAILDIR/subscriptions`
}

to $FOLDER/
